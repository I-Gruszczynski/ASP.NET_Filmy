@model IEnumerable<KoszykRzecz>

<div>
    @foreach (var itemCart in Model)
    {
    <ul>
        <li class="m-auto">
            <p>Tytul</p>
            @itemCart.Film.Tytul
        </li>
        <li class="m-auto">
            <p>Ilosc</p>
            @itemCart.Ilosc
        </li>
        <li class="m-auto">
            <p>Cena</p>
            @itemCart.Wartosc zł
        </li>
    </ul>
    }
</div>
<div>
    Razem: @ViewBag.CenaCalowita zł
</div>
@section Script{ 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}
